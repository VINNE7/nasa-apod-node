# Server configuration
PORT=3000

# SQLite database file path
DB_FILE_NAME=./sqlite/mydb.sqlite

# NASA APOD API
NASA_API_URL=https://api.nasa.gov/planetary
NASA_API_KEY=your_nasa_api_key_here

# SMTP Configuration (Mailtrap or other SMTP provider)
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=587
SMTP_SECURE=false  # true for SSL, false for STARTTLS
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=nasa-apod@yourdomain.com